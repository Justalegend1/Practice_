@model Practice_1.Domain.Entity.Doctor

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Doctor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label">Фамилия</label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Имя</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Middle_name" class="control-label">Отчество</label>
                <input asp-for="Middle_name" class="form-control" />
                <span asp-validation-for="Middle_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hospital_ID" class="control-label">Название больницы</label>
               <select asp-for="Hospital_ID" class ="form-control" asp-items="ViewBag.Hospital_Name"></select>
                <span asp-validation-for="Hospital_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
